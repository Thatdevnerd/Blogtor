{% extends 'blog.html.twig' %}

{% block title %}Blog crud{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/crud.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="crud-wrapper">
            <div class="crud">
                <div class="table-body">
                    <table class="table">
                        <thead class="thead-aligned">
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Date</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if blogs|default(null) %}
                            {% for blog in blogs %}
                                <tr>
                                    <td>{{ blog.id }}</td>
                                    <td>{{ blog.title }}</td>
                                    <td>{{ blog.content }}</td>
                                    <td>{{ blog.date ? blog.date|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                      <div class="button-wrapper">
                                          <a class="show-button" href="{{ path('app_admin_crud_show', {'id': blog.id}) }}">show</a>
                                          <a class="edit-button" href="{{ path('app_admin_crud_edit', {'id': blog.id}) }}">edit</a>
                                      </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <a href="{{ path('app_admin_crud_new') }}">Create new</a>
    </div>
{% endblock %}
