{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <h1>Blogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ blog.date ? blog.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_crud_index') }}">back to list</a>

    <a href="{{ path('app_admin_crud_edit', {'id': blog.id}) }}">edit</a>

