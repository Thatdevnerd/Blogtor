{% extends 'base.html.twig' %}

{% block title %} Blog overview {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/blog.css') }}">
{% endblock %}

{% block body %}
<div class="container">
  <div class="nav-wrapper">
      <nav class="horizontal-nav">
          <ul>
              <li>
                  <a href="{{ path('app_blog_posts') }}">Home (Blog overview)</a>
              </li>
              <li>
                  <a href="#">New blog</a>
              </li>
              <li>
                  <a href="{{ path('app_logout') }}">Logout</a>
              </li>
              </ul>
          </nav>
    </div>
    <div class="blog-list-wrapper">
        <div class="blog-list">
            <ul>
                {% if posts %}
                   {% for post in posts %}
                       <li class="blog-card-wrapper">
                           <div class="blog-card">
                               <div class="blog-body">
                                   <span>{{ post.content }}</span>
                               </div>
                               <div class="blog-footer">
                                   <span>{{ post.date }}</span>
                               </div>
                           </div>
                       </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
