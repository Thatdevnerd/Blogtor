{% extends 'blog.html.twig' %}

{% block title %} Blog overview {% endblock %}

{% block content %}
<div class="container">
    <div class="blog-list-wrapper">
        <div class="blog-list">
            <ul>
                <li class="blog-card-wrapper">
                {% if posts|default(null) %}
                   {% for post in posts %}
                           <div class="blog-card">
                               <div class="blog-body">
                                   <span>{{ post.content|trim }}</span>
                               </div>
                               <div class="blog-footer">
                                   <span>{{ post.date|date|trim}}</span>
                               </div>
                           </div>
                    {% endfor %}
                {% else %}
                    <div class="blog-card">
                        <div class="blog-body">
                            <span>No posts found ðŸ˜­</span>
                        </div>
                    </div>
                {% endif %}
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/blog.js') }}"></script>
{% endblock %}
